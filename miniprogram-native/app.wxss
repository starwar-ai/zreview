/**
 * app.wxss - 全局样式
 * 基于 shadcn/ui 设计系统
 */

/* ========== 基础样式 ========== */
page {
  background-color: #fafafa;
  color: #09090b;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif;
  font-size: 32rpx;
  line-height: 1.5;
}

/* 移除通用选择器，微信小程序不支持 */
page, view, text, button, input, textarea, navigator, image {
  box-sizing: border-box;
}

/* ========== 布局容器 ========== */
.container {
  min-height: 100vh;
  background-color: #fafafa;
}

.section {
  margin-bottom: 32rpx;
}

/* ========== 卡片系统 ========== */
.card {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.card-hover {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.card-hover:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #09090b;
  line-height: 1.25;
}

.card-description {
  font-size: 28rpx;
  color: #71717a;
  margin-top: 8rpx;
}

.card-content {
  color: #09090b;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e4e4e7;
}

/* ========== 按钮系统 ========== */

/* 主要按钮 */
.btn,
.btn-primary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  padding: 0 32rpx;
  background-color: #18181b;
  color: #fafafa;
  border: none;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary:disabled,
.btn-primary.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 次要按钮 */
.btn-secondary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  padding: 0 32rpx;
  background-color: #f4f4f5;
  color: #18181b;
  border: none;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-secondary:active {
  background-color: #e4e4e7;
  transform: scale(0.98);
}

.btn-secondary:disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 轮廓按钮 */
.btn-outline {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  padding: 0 32rpx;
  background-color: transparent;
  color: #18181b;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-outline:active {
  background-color: #f4f4f5;
  transform: scale(0.98);
}

.btn-outline:disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 危险按钮 */
.btn-danger,
.btn-destructive {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  padding: 0 32rpx;
  background-color: #ef4444;
  color: #fafafa;
  border: none;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-danger:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-danger:disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 危险轮廓按钮 */
.btn-danger-outline {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  padding: 0 32rpx;
  background-color: transparent;
  color: #ef4444;
  border: 1rpx solid #ef4444;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-danger-outline:active {
  background-color: #fef2f2;
  transform: scale(0.98);
}

/* 幽灵按钮 */
.btn-ghost {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  padding: 0 32rpx;
  background-color: transparent;
  color: #18181b;
  border: none;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-ghost:active {
  background-color: #f4f4f5;
  transform: scale(0.98);
}

/* 链接按钮 */
.btn-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #18181b;
  text-decoration: underline;
  background: transparent;
  border: none;
  padding: 0;
  height: auto;
}

.btn-link:active {
  opacity: 0.7;
}

/* 小按钮 */
.btn-sm {
  height: 72rpx;
  font-size: 28rpx;
  padding: 0 24rpx;
  border-radius: 10rpx;
}

/* 大按钮 */
.btn-lg {
  height: 88rpx;
  font-size: 32rpx;
  padding: 0 40rpx;
  border-radius: 12rpx;
}

/* ========== 徽章系统 ========== */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1;
  border-radius: 24rpx;
  white-space: nowrap;
  border: 1rpx solid transparent;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.badge-default {
  background-color: #f4f4f5;
  color: #18181b;
  border-color: #e4e4e7;
}

.badge-primary {
  background-color: #18181b;
  color: #fafafa;
}

.badge-secondary {
  background-color: #f4f4f5;
  color: #18181b;
  border-color: #e4e4e7;
}

.badge-success {
  background-color: #f0fdf4;
  color: #15803d;
  border-color: #bbf7d0;
}

.badge-warning {
  background-color: #fff7ed;
  color: #c2410c;
  border-color: #fed7aa;
}

.badge-danger,
.badge-destructive {
  background-color: #fef2f2;
  color: #dc2626;
  border-color: #fecaca;
}

.badge-outline {
  background-color: transparent;
  color: #18181b;
  border-color: #e4e4e7;
}

/* ========== 输入框系统 ========== */
.input {
  display: flex;
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #09090b;
  background-color: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.input:focus {
  outline: none;
  border-color: #18181b;
  box-shadow: 0 0 0 2rpx rgba(24, 24, 27, 0.1);
}

.input::placeholder {
  color: #a1a1aa;
}

.input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.textarea {
  display: flex;
  width: 100%;
  min-height: 160rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #09090b;
  background-color: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.5;
}

.textarea:focus {
  outline: none;
  border-color: #18181b;
  box-shadow: 0 0 0 2rpx rgba(24, 24, 27, 0.1);
}

/* ========== 表单标签 ========== */
.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #09090b;
  margin-bottom: 12rpx;
  display: block;
}

.label-muted {
  font-size: 24rpx;
  color: #71717a;
  font-weight: 400;
}

/* ========== 分隔线 ========== */
.separator,
.divider {
  height: 1rpx;
  width: 100%;
  background-color: #e4e4e7;
  margin: 32rpx 0;
}

/* ========== 文本样式 ========== */
.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-base {
  font-size: 32rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

.text-2xl {
  font-size: 48rpx;
}

.text-3xl {
  font-size: 60rpx;
}

.text-foreground {
  color: #09090b;
}

.text-muted {
  color: #71717a;
}

.text-muted-foreground {
  color: #71717a;
}

.text-primary {
  color: #18181b;
}

.text-success {
  color: #16a34a;
}

.text-warning {
  color: #f97316;
}

.text-danger,
.text-destructive {
  color: #ef4444;
}

.font-normal {
  font-weight: 400;
}

.font-medium {
  font-weight: 500;
}

.font-semibold {
  font-weight: 600;
}

.font-bold {
  font-weight: 700;
}

/* ========== 背景颜色 ========== */
.bg-background {
  background-color: #ffffff;
}

.bg-muted {
  background-color: #f4f4f5;
}

.bg-accent {
  background-color: #f4f4f5;
}

.bg-primary {
  background-color: #18181b;
}

.bg-secondary {
  background-color: #f4f4f5;
}

.bg-success {
  background-color: #f0fdf4;
}

.bg-warning {
  background-color: #fff7ed;
}

.bg-danger,
.bg-destructive {
  background-color: #fef2f2;
}

/* ========== 边框 ========== */
.border {
  border: 1rpx solid #e4e4e7;
}

.border-t {
  border-top: 1rpx solid #e4e4e7;
}

.border-b {
  border-bottom: 1rpx solid #e4e4e7;
}

.border-l {
  border-left: 1rpx solid #e4e4e7;
}

.border-r {
  border-right: 1rpx solid #e4e4e7;
}

/* ========== 圆角 ========== */
.rounded-sm {
  border-radius: 6rpx;
}

.rounded {
  border-radius: 12rpx;
}

.rounded-md {
  border-radius: 12rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-xl {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

/* ========== 阴影 ========== */
.shadow-none {
  box-shadow: none;
}

.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shadow {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.shadow-md {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #d4d4d8;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #09090b;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #71717a;
  margin-bottom: 8rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #a1a1aa;
}

/* ========== 加载状态 ========== */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #e4e4e7;
  border-top-color: #18181b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 32rpx;
  height: 32rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #71717a;
}

