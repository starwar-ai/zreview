/* pages/profile/profile.wxss - shadcn 风格 */

.profile-container {
  min-height: 100vh;
  background: #fafafa;
}

/* ========== 顶部用户信息卡片 ========== */
.profile-header {
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx;
  margin: 24rpx 24rpx 0;
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
}

/* 头像 - 黑色圆形 */
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
  background: #18181b;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  color: #fafafa;
  font-weight: 700;
  margin-right: 32rpx;
  border: 2rpx solid #e4e4e7;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #09090b;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.role {
  font-size: 26rpx;
  color: #71717a;
  padding: 6rpx 16rpx;
  background: #f4f4f5;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  display: inline-block;
}

/* ========== 主体内容 ========== */
.profile-body {
  padding: 24rpx;
}

/* 章节卡片 */
.section {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #09090b;
  margin-bottom: 24rpx;
}

/* ========== 统计数据 ========== */
.stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 16rpx;
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-item:active {
  background: #f4f4f5;
  transform: scale(0.98);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #09090b;
  margin-bottom: 8rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #71717a;
}

/* ========== 信息列表 ========== */
.info-list {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e4e4e7;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #71717a;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #09090b;
  font-weight: 500;
}

/* ========== 退出登录按钮 ========== */
.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  border: 1rpx solid #ef4444;
  border-radius: 12rpx;
  color: #ef4444;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 48rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.logout-btn:active {
  background: #fef2f2;
  transform: scale(0.98);
}
