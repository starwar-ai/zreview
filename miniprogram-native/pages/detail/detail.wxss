/* pages/detail/detail.wxss - shadcn 风格 */

.detail-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fafafa;
}

.detail-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
  padding-bottom: 200rpx;
}

/* ========== 头部 ========== */
.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.type-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #18181b;
  background: #f4f4f5;
  border: 1rpx solid #e4e4e7;
  border-radius: 24rpx;
  font-weight: 500;
}

.status-badge {
  font-size: 28rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.status-badge.pending {
  color: #c2410c;
  background: #fff7ed;
  border: 1rpx solid #fed7aa;
}

.status-badge.approved {
  color: #15803d;
  background: #f0fdf4;
  border: 1rpx solid #bbf7d0;
}

.status-badge.rejected {
  color: #dc2626;
  background: #fef2f2;
  border: 1rpx solid #fecaca;
}

.detail-id {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.id-label {
  color: #71717a;
  margin-right: 12rpx;
}

.id-value {
  color: #09090b;
  font-weight: 600;
}

.detail-summary {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #09090b;
  line-height: 1.6;
}

/* ========== 章节 ========== */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #09090b;
}

.title-bar {
  width: 6rpx;
  height: 32rpx;
  background: #18181b;
  border-radius: 3rpx;
  margin-right: 12rpx;
}

/* ========== 表单字段 ========== */
.form-fields {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  overflow: hidden;
}

.form-field {
  padding: 30rpx;
  border-bottom: 1rpx solid #e4e4e7;
}

.form-field:last-child,
.form-field.no-border {
  border-bottom: none;
}

.field-label {
  font-size: 26rpx;
  color: #71717a;
  margin-bottom: 16rpx;
}

.field-value {
  font-size: 28rpx;
  color: #09090b;
  line-height: 1.6;
  word-break: break-all;
  font-weight: 500;
}

.field-value.amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #ef4444;
}

.empty-tip {
  font-size: 26rpx;
  color: #a1a1aa;
  font-style: italic;
}

/* ========== 图片列表 ========== */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e4e4e7;
  overflow: hidden;
}

/* ========== 文件列表 ========== */
.file-list {
  margin-top: 16rpx;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 8rpx;
  gap: 16rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.file-item:active {
  background: #f4f4f5;
  transform: scale(0.98);
}

.file-item:last-child,
.file-item.no-margin {
  margin-bottom: 0;
}

.file-name {
  flex: 1;
  font-size: 26rpx;
  color: #09090b;
}

.file-size {
  font-size: 24rpx;
  color: #71717a;
}

/* ========== 表格 ========== */
.table-wrapper {
  margin-top: 16rpx;
}

.table-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e4e4e7;
}

.table-title {
  font-size: 28rpx;
  color: #09090b;
  font-weight: 600;
}

.table-count {
  font-size: 24rpx;
  color: #71717a;
  margin-left: 8rpx;
}

.table-toggle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #18181b;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: #f4f4f5;
  border: 1rpx solid #e4e4e7;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.table-toggle:active {
  background: #e4e4e7;
}

.table-scroll {
  width: 100%;
  margin-top: 16rpx;
}

.table {
  width: max-content;
  min-width: 100%;
  border: 1rpx solid #e4e4e7;
  border-radius: 8rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background: #fafafa;
  font-weight: 600;
}

.table-row {
  display: flex;
  border-top: 1rpx solid #e4e4e7;
}

.table-row:hover {
  background: #fafafa;
}

.table-cell {
  flex-shrink: 0;
  padding: 20rpx;
  font-size: 26rpx;
  color: #09090b;
  border-right: 1rpx solid #e4e4e7;
  min-width: 160rpx;
  word-break: break-all;
}

.table-cell:last-child,
.table-cell.no-border {
  border-right: none;
}

.table-cell.header {
  background: #fafafa;
  color: #52525b;
  font-weight: 600;
}

.table-collapsed {
  padding: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #71717a;
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

/* ========== 时间线 ========== */
.timeline {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  padding: 30rpx;
}

.timeline-item {
  display: flex;
  gap: 24rpx;
  position: relative;
}

.timeline-item:last-child .timeline-line,
.timeline-item.no-line .timeline-line {
  display: none;
}

.timeline-dot-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 3rpx solid #e4e4e7;
  background: #ffffff;
  flex-shrink: 0;
}

.timeline-dot.pending {
  border-color: #f97316;
  background: #fff7ed;
}

.timeline-dot.approved {
  border-color: #16a34a;
  background: #16a34a;
}

.timeline-dot.rejected {
  border-color: #ef4444;
  background: #ef4444;
}

.timeline-line {
  flex: 1;
  width: 2rpx;
  background: #e4e4e7;
  margin-top: 8rpx;
}

.timeline-content {
  flex: 1;
  padding-bottom: 40rpx;
}

.timeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.approver {
  font-size: 28rpx;
  color: #09090b;
  font-weight: 600;
}

.status {
  font-size: 24rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status.pending {
  color: #c2410c;
  background: #fff7ed;
}

.status.approved {
  color: #15803d;
  background: #f0fdf4;
}

.status.rejected {
  color: #dc2626;
  background: #fef2f2;
}

.timeline-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #71717a;
  margin-bottom: 12rpx;
}

.timeline-comment {
  padding: 20rpx;
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

.comment-label {
  font-size: 24rpx;
  color: #71717a;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #09090b;
  line-height: 1.6;
}

/* ========== 信息列表 ========== */
.info-list {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  overflow: hidden;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #e4e4e7;
}

.info-item:last-child,
.info-item.no-border {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #71717a;
}

.info-value {
  font-size: 28rpx;
  color: #09090b;
  font-weight: 500;
  text-align: right;
  max-width: 60%;
  word-break: break-all;
}

.bottom-spacing {
  height: 120rpx;
}

/* ========== 操作按钮 ========== */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-top: 1rpx solid #e4e4e7;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.reject-btn {
  background: #ffffff;
  color: #ef4444;
  border: 1rpx solid #ef4444;
}

.reject-btn:active {
  background: #fef2f2;
  transform: scale(0.98);
}

.approve-btn {
  background: #16a34a;
  color: #ffffff;
}

.approve-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.action-btn[disabled] {
  opacity: 0.5;
  pointer-events: none;
}
