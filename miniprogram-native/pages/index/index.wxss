/* pages/index/index.wxss - shadcn 风格 */

.index-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fafafa;
}

/* ========== 搜索栏 ========== */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e4e4e7;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 24rpx;
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  gap: 16rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.search-input-wrapper:focus-within {
  border-color: #18181b;
  background: #ffffff;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #09090b;
}

.clear-icon {
  flex-shrink: 0;
  padding: 4rpx 12rpx;
  font-size: 36rpx;
  color: #a1a1aa;
  line-height: 1;
  cursor: pointer;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  color: #18181b;
  background: #f4f4f5;
  border: 1rpx solid #e4e4e7;
  border-radius: 10rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.filter-btn:active {
  background: #e4e4e7;
  transform: scale(0.95);
}

/* ========== 筛选面板 ========== */
.filter-panel {
  max-height: 0;
  overflow: hidden;
  background: #ffffff;
  border-bottom: 1rpx solid #e4e4e7;
  transition: max-height 300ms cubic-bezier(0.4, 0, 0.2, 1);
}

.filter-panel.show {
  max-height: 600rpx;
  padding: 30rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.filter-label {
  width: 140rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #09090b;
}

.filter-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 10rpx;
  color: #09090b;
  line-height: 72rpx;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.filter-btn-reset,
.filter-btn-apply {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 10rpx;
  text-align: center;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.filter-btn-reset {
  background: #f4f4f5;
  color: #52525b;
  border: 1rpx solid #e4e4e7;
}

.filter-btn-reset:active {
  background: #e4e4e7;
}

.filter-btn-apply {
  background: #18181b;
  color: #fafafa;
}

.filter-btn-apply:active {
  opacity: 0.9;
}

/* ========== 标签页 ========== */
.tabs {
  display: flex;
  background: #ffffff;
  border-bottom: 1rpx solid #e4e4e7;
}

.tab-item {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  font-size: 28rpx;
  color: #71717a;
  font-weight: 400;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active {
  color: #09090b;
  font-weight: 600;
}

/* 微信小程序不支持::after伪元素，需要使用额外的view元素来实现下划线效果 */
.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #18181b;
  border-radius: 2rpx;
}

.tab-label {
  font-size: 30rpx;
}

.tab-badge {
  margin-left: 8rpx;
  padding: 0 12rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #fafafa;
  background: #f97316;
  border-radius: 16rpx;
}

/* ========== 筛选条 ========== */
.filter-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e4e4e7;
}

.filter-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #09090b;
  margin-right: 20rpx;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.filter-options {
  display: inline-flex;
  gap: 12rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #52525b;
  background: #f4f4f5;
  border: 1rpx solid #e4e4e7;
  border-radius: 24rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.filter-item.active {
  color: #fafafa;
  background: #18181b;
  border-color: #18181b;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #e4e4e7;
  border-top-color: #18181b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #71717a;
}

/* ========== 列表区域 ========== */
.list-scroll {
  flex: 1;
  overflow-y: auto;
}

.list-content {
  padding: 20rpx 30rpx 100rpx;
}

/* ========== 审批卡片 ========== */
.approval-card {
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.approval-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.approval-card.overdue {
  border-left: 4rpx solid #ef4444;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.type-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #18181b;
  background: #f4f4f5;
  border: 1rpx solid #e4e4e7;
  border-radius: 24rpx;
  font-weight: 500;
}

/* 状态徽章 */
.status-badge {
  font-size: 24rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.status-badge.pending {
  color: #c2410c;
  background: #fff7ed;
  border: 1rpx solid #fed7aa;
}

.status-badge.approved {
  color: #15803d;
  background: #f0fdf4;
  border: 1rpx solid #bbf7d0;
}

.status-badge.rejected {
  color: #dc2626;
  background: #fef2f2;
  border: 1rpx solid #fecaca;
}

.card-id {
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #a1a1aa;
}

.id-label {
  margin-right: 8rpx;
}

.id-value {
  color: #71717a;
  font-weight: 500;
}

.card-summary {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #09090b;
  line-height: 1.5;
}

.card-fields {
  margin-bottom: 20rpx;
}

.field-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.field-label {
  flex-shrink: 0;
  color: #71717a;
}

.field-value {
  flex: 1;
  color: #09090b;
  word-break: break-all;
  font-weight: 500;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #e4e4e7;
  font-size: 24rpx;
}

.footer-left {
  display: flex;
  align-items: center;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.applicant {
  color: #52525b;
  font-weight: 500;
}

.time {
  color: #a1a1aa;
}

.overdue-tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #fafafa;
  background: #ef4444;
  border-radius: 12rpx;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #18181b;
}

.load-more.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #71717a;
}

.no-more {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #a1a1aa;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #09090b;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #71717a;
}
