/* pages/index/index.wxss */
.index-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
}

/* Search Bar */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 35rpx;
  gap: 16rpx;
}

.search-icon {
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #323233;
}

.clear-icon {
  flex-shrink: 0;
  padding: 10rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  color: #667eea;
  border: 1px solid #667eea;
  border-radius: 8rpx;
}

/* Filter Panel */
.filter-panel {
  max-height: 0;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #ebedf0;
  transition: max-height 0.3s;
}

.filter-panel.show {
  max-height: 600rpx;
  padding: 30rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.filter-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #646566;
}

.filter-input {
  flex: 1;
  height: 70rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  line-height: 70rpx;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.filter-btn-reset,
.filter-btn-apply {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.filter-btn-reset {
  background: #f7f8fa;
  color: #646566;
}

.filter-btn-apply {
  background: #667eea;
  color: #fff;
}

/* Tabs */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1px solid #ebedf0;
}

.tab-item {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  font-size: 28rpx;
  color: #646566;
  transition: all 0.3s;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

.tab-label {
  font-size: 30rpx;
}

.tab-badge {
  margin-left: 8rpx;
  padding: 0 12rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #fff;
  background: #ff9500;
  border-radius: 16rpx;
}

/* Filter Bar */
.filter-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #ebedf0;
}

.filter-label {
  font-size: 28rpx;
  color: #323233;
  margin-right: 20rpx;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.filter-options {
  display: inline-flex;
  gap: 20rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #646566;
  background: #f7f8fa;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  color: #fff;
  background: #667eea;
}

.type-icon {
  font-size: 32rpx;
}

/* Loading State */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #ebedf0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #969799;
}

/* List */
.list-scroll {
  flex: 1;
  overflow-y: auto;
}

.list-content {
  padding: 20rpx 30rpx;
}

/* Approval Card */
.approval-card {
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.3s;
}

.approval-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0,0,0,0.08);
}

.approval-card.overdue {
  border-left: 6rpx solid #ee0a24;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.type-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
}

.status-badge {
  font-size: 24rpx;
  font-weight: 600;
}

.card-id {
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #969799;
}

.id-label {
  margin-right: 8rpx;
}

.id-value {
  color: #323233;
}

.card-summary {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.5;
}

.card-fields {
  margin-bottom: 20rpx;
}

.field-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.field-label {
  flex-shrink: 0;
  color: #969799;
}

.field-value {
  flex: 1;
  color: #323233;
  word-break: break-all;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1px solid #ebedf0;
  font-size: 24rpx;
}

.footer-left {
  display: flex;
  align-items: center;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.applicant {
  color: #646566;
}

.time {
  color: #969799;
}

.overdue-tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #fff;
  background: #ee0a24;
  border-radius: 4rpx;
}

/* Load More */
.load-more {
  padding: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #667eea;
}

.load-more.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #969799;
}

.no-more {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #c8c9cc;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #969799;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #c8c9cc;
}
