/* pages/login/login.wxss - shadcn 风格 */

.login-container {
  min-height: 100vh;
  background: #fafafa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

/* 登录卡片 */
.login-header {
  width: 100%;
  max-width: 640rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 16rpx;
  padding: 64rpx 48rpx 48rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

/* Logo - 黑色方形 */
.logo {
  width: 128rpx;
  height: 128rpx;
  border-radius: 12rpx;
  background: #18181b;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  font-weight: 700;
  color: #fafafa;
  margin: 0 auto 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #09090b;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.subtitle {
  font-size: 28rpx;
  color: #71717a;
  line-height: 1.5;
}

/* 表单区域 */
.login-form {
  width: 100%;
  max-width: 640rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.input {
  display: flex;
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #09090b;
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.input:focus {
  border-color: #18181b;
  box-shadow: 0 0 0 2rpx rgba(24, 24, 27, 0.1);
}

/* 测试账号卡片 */
.test-accounts {
  background: #ffffff;
  border: 1rpx solid #e4e4e7;
  border-radius: 12rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 32rpx;
}

.test-title {
  font-size: 28rpx;
  color: #09090b;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.account-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.account-item {
  background: #fafafa;
  border: 1rpx solid #e4e4e7;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.account-item:active {
  background: #f4f4f5;
  border-color: #d4d4d8;
  transform: scale(0.98);
}

.account-name {
  font-size: 28rpx;
  color: #18181b;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.account-desc {
  font-size: 24rpx;
  color: #71717a;
  line-height: 1.4;
}

/* 登录按钮 - shadcn 主要按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #18181b;
  color: #fafafa;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.login-btn:disabled,
.login-btn.button-hover {
  opacity: 0.5;
}

/* 页脚 */
.login-footer {
  width: 100%;
  max-width: 640rpx;
  text-align: center;
  padding-top: 32rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #a1a1aa;
}
