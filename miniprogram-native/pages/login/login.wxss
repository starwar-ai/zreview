/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 120rpx 48rpx 48rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  font-weight: bold;
  color: #ffffff;
  margin: 0 auto 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-form {
  flex: 1;
}

.form-item {
  margin-bottom: 32rpx;
}

.input {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  padding: 28rpx 32rpx;
  font-size: 32rpx;
  color: #323233;
}

.test-accounts {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 48rpx;
}

.test-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  font-weight: bold;
}

.account-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.account-item {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
}

.account-name {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.account-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.login-btn {
  background: #ffffff;
  color: #667eea;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
}

.login-btn:disabled {
  background: rgba(255, 255, 255, 0.5);
  color: rgba(102, 126, 234, 0.5);
}

.login-footer {
  text-align: center;
  padding-top: 48rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
